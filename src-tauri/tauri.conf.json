{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "meta-finance",
  "version": "0.2.1",
  "identifier": "com.metafinance.finance",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Meta Finance",
        "width": 1280,
        "height": 720,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://raw.githubusercontent.com/RicardoOGLima/Meta-Finance/main/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDU5NjQ3Q0RCQjc5RTQxMzQKUldRMFFaNjMyM3hrV2NxR2QvT01ua1U4UG40MEFaQjBSTWFtdDV3MGZtZTZQUjQ0aXg5bDk2UDUK"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": "v1Compatible",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}